<%- include("partials/header")-%>
    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>
    <form action="/" method="post">
        <% posts.forEach(function(post){%>
            <h2 id="h2">
                <%= post.title %>
            </h2>
            <p>
                <%= post.content.substring(0,100)+"........." %>
                <a href="/posts/<%=post._id%>">Read More</a>
            </p>


            <% }); %>
    </form>

    <%- include("partials/footer")-%>
